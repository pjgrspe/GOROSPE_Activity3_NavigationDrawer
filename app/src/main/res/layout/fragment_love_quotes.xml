<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_constraint_layout"
    tools:context=".fragments.LoveQuotesFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txt_love_quote"
        android:padding="20dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="textStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In all the world, there is no heart for me like yours. In all the world, there is no love for you like mine. - Maya Angelou"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_love_quote" >

        <Button
            android:id="@+id/btn_randomize_quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Randomize quote" />

        <Button
            android:id="@+id/btn_save_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E91E63"
            android:text="Save quote" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>